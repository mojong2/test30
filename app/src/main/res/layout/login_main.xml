<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View
            android:layout_width="14dp"
            android:layout_height="76dp" />
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="35dp"
            android:layout_height="83dp"
            android:background="@drawable/back_button" />

        <View
            android:layout_width="65dp"
            android:layout_height="90dp" />
        <ImageView
            android:layout_width="180dp"
            android:layout_height="204dp"
            android:background="@drawable/login_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="201dp"
        android:layout_height="54dp"

        >

        <View
            android:layout_width="28dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font1"
            android:text="아이디"
            android:textColor="@color/black"
            android:textSize="30dp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/empty_view"
            android:layout_width="45dp"
            android:layout_height="47dp" />

        <View
            android:id="@+id/empty_view1"
            android:layout_width="60dp"
            android:layout_height="48dp" />

        <View
            android:layout_width="325dp"
            android:layout_height="67dp"
            android:layout_toRightOf="@id/empty_view"
            android:background="@drawable/line2" />

        <EditText
            android:id="@+id/text1"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/empty_view1"
            android:background="@null"
            android:hint="jeonju123"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            android:textSize="30dp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="199dp"
        android:layout_height="54dp"

        >

        <View
            android:layout_width="28dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font1"
            android:text="비밀번호"
            android:textColor="@color/black"
            android:textSize="30dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/empty_view2"
            android:layout_width="45dp"
            android:layout_height="47dp" />

        <View
            android:id="@+id/empty_view3"
            android:layout_width="60dp"
            android:layout_height="48dp" />
        <View
            android:layout_width="325dp"
            android:layout_height="67dp"
            android:layout_toRightOf="@id/empty_view2"
            android:background="@drawable/line2" />

        <EditText
            android:id="@+id/text2"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/empty_view3"
            android:background="@null"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            android:textSize="30dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="60dp"
        >

        <View
            android:layout_width="30dp"
            android:layout_height="61dp" />

        <TextView
            android:id="@+id/error_text_login"
            android:layout_width="350dp"
            android:layout_height="57dp"
            android:fontFamily="@font/font2"
            android:gravity="center"
            android:textColor="#D50000"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/loginbutton"
        android:layout_width="325dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:background="@drawable/login_checkbutton" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="142dp">

        <View
            android:layout_width="42dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/forget_pwbutton"
            android:layout_width="161dp"
            android:layout_height="61dp"
            android:layout_centerInParent="true"
            android:background="#00FFFFFF"
            android:fontFamily="@font/font1"
            android:text="비밀번호 찾기"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="26dp"
            android:layout_height="61dp"
            android:text="|"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <Button
            android:id="@+id/create_id_button"
            android:layout_width="118dp"
            android:layout_height="61dp"
            android:layout_centerInParent="true"
            android:background="#00FFFFFF"
            android:fontFamily="@font/font1"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>