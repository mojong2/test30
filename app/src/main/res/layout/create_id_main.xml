<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context=".CreateIdActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View
            android:layout_width="14dp"
            android:layout_height="76dp" />
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="35dp"
            android:layout_height="83dp"
            android:background="@drawable/back_button" />

        <View
            android:layout_width="65dp"
            android:layout_height="90dp" />
        <ImageView
            android:layout_width="180dp"
            android:layout_height="204dp"
            android:background="@drawable/login_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <View
            android:layout_width="17dp"
            android:layout_height="71dp" />

        <TextView
            android:id="@+id/main_menu"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:fontFamily="@font/font2"
            android:gravity="left"
            android:text="아이디 입력"
            android:textColor="@color/black"
            android:textSize="50dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        >

        <EditText
            android:layout_width="333dp"
            android:layout_height="68dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:visibility="invisible"
            android:backgroundTint="@color/black"
            android:hint="주소 입력하기"
            android:textColor="@color/black"
            android:textColorHint="#4C4C4C"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp">

        <View
            android:layout_width="38dp"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/all_input"
                android:fontFamily="@font/font1"
                android:inputType="textWebEmailAddress"
                android:layout_width="340dp"
                android:layout_height="74dp"
                android:backgroundTint="@color/black"
                android:gravity="center_horizontal|left"
                android:maxLines="1"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textColorHint="#4C4C4C"
                android:textSize="35dp"
                android:visibility="invisible"/>
            <EditText
                android:id="@+id/pw_input"
                android:fontFamily="@font/font1"
                android:inputType="textPassword"
                android:layout_width="340dp"
                android:layout_height="74dp"
                android:backgroundTint="@color/black"
                android:gravity="center_horizontal|left"
                android:hint="비밀번호를 입력하세요"
                android:maxLines="1"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textColorHint="#4C4C4C"
                android:textSize="35dp"
                android:visibility="invisible"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <EditText
                    android:fontFamily="@font/font1"
                    android:inputType="textWebEmailAddress"
                    android:id="@+id/id_input"
                    android:layout_width="290dp"
                    android:layout_height="74dp"
                    android:backgroundTint="@color/black"
                    android:gravity="center_horizontal|left"
                    android:hint="예: jeonju123"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textColorHint="#4C4C4C"
                    android:textSize="35dp"
                    android:visibility="visible"/>
                <Button
                    android:id="@+id/checkId"
                    android:layout_width="77dp"
                    android:layout_height="70dp"
                    android:background="@drawable/line3"
                    android:text="인증"
                    android:textSize="19dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/birth_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">

                <EditText
                    android:id="@+id/year_input"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:inputType="date"
                    android:maxLength="4"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:text="년"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <EditText
                    android:id="@+id/month_input"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:inputType="date"
                    android:maxLength="2"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:text="월"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <View
                    android:layout_width="21dp"
                    android:layout_height="48dp" />

                <EditText
                    android:id="@+id/day_input"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:inputType="date"
                    android:maxLength="2"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:text="일"
                    android:textColor="@color/black"
                    android:textSize="30dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/number_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">

                <EditText
                    android:id="@+id/first_input"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:inputType="date"
                    android:textColorHint="#4C4C4C"
                    android:hint="010"
                    android:maxLength="3"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:text=" - "
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <EditText
                    android:id="@+id/second_input"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="#4C4C4C"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:hint="1234"
                    android:inputType="date"
                    android:maxLength="4"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:text=" - "
                    android:textColor="@color/black"
                    android:textSize="30dp" />


                <EditText
                    android:id="@+id/third_input"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:textColorHint="#4C4C4C"
                    android:hint="5678"
                    android:gravity="center"
                    android:inputType="date"
                    android:maxLength="4"
                    android:textColor="@color/black"
                    android:textSize="30dp" />
                <Button
                    android:id="@+id/checkPn"
                    android:layout_width="77dp"
                    android:layout_height="70dp"
                    android:background="@drawable/line3"
                    android:text="인증"
                    android:textSize="19dp"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sex_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/all_input"
                android:layout_marginTop="-10dp"
                android:visibility="invisible">

                <View
                    android:layout_width="73dp"
                    android:layout_height="32dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남자"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <CheckBox
                    android:id="@+id/manCheck"
                    android:layout_width="32dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="-5dp"
                    />

                <View
                    android:layout_width="38dp"
                    android:layout_height="34dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여자"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <CheckBox
                    android:id="@+id/womanCheck"
                    android:layout_width="32dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="-5dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/ex_main"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:fontFamily="@font/font1"
        android:gravity="center_horizontal"
        android:text="5~20자의 영어 소문자, 숫자로 입력해주세요"
        android:textColor="#423F3F"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="168dp">

        <View
            android:layout_width="52dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/next_button"
            android:layout_width="301dp"
            android:layout_height="83dp"
            android:background="@drawable/line1"
            android:fontFamily="@font/font2"
            android:gravity="center"
            android:text="계속하기"
            android:textColor="@color/black"
            android:textSize="40dp" />
        <View
            android:layout_width="52dp"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>