<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gongji_bg"
    tools:context=".GongjiSubActivity">
    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="@drawable/line4">
        <TextView
            android:id="@+id/back_button"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:text="뒤로가기"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="건의사항"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <View
            android:layout_width="28dp"
            android:layout_height="59dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_gravity="center"
            android:id="@+id/Sound_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/speaker_button"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/second"
        android:layout_below="@id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/size_up_button"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:drawableBottom="@drawable/coding_pmbutton" />

        <TextView
            android:id="@+id/size_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작게"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/size_small_button"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:drawableBottom="@drawable/coding_mbutton" />

        <View
            android:layout_width="180dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/delete_text"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="삭제"
            android:textColor="@color/black"
            android:textSize="30dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second">

        <TextView
            android:id="@+id/title1_text"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:autoSizeMinTextSize="35dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/font1"
            android:textColor="@color/black"
            android:textSize="35dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/contents1_text"
        android:layout_width="match_parent"
        android:layout_height="394dp"
        android:layout_below="@id/third"
        android:background="@drawable/line"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/show_opinion"
        android:layout_width="112dp"
        android:layout_height="37dp"
        android:layout_below="@id/contents1_text"
        android:text="댓글"
        android:textColor="@color/black"
        android:textSize="30dp" />
</RelativeLayout>