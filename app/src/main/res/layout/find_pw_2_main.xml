<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context=".FindPw2Activity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View
            android:layout_width="14dp"
            android:layout_height="76dp" />
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="35dp"
            android:layout_height="83dp"
            android:background="@drawable/back_button" />

        <View
            android:layout_width="65dp"
            android:layout_height="90dp" />
        <ImageView
            android:layout_width="180dp"
            android:layout_height="204dp"
            android:background="@drawable/login_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"

        >

        <View
            android:layout_width="13dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font2"
            android:gravity=""
            android:text="새로운 비밀번호를 입력하세요."
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/empty_view"
            android:layout_width="11dp"
            android:layout_height="46dp" />

        <View
            android:id="@+id/empty_view1"
            android:layout_width="20dp"
            android:layout_height="40dp" />

        <View
            android:layout_width="395dp"
            android:layout_height="67dp"
            android:layout_toRightOf="@id/empty_view"
            android:background="@drawable/line3" />

        <EditText
            android:id="@+id/new_password1"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/empty_view1"
            android:background="@null"
            android:hint="비밀번호를 입력하세요"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            android:textSize="30dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"

        >

        <View
            android:layout_width="13dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font2"
            android:gravity="center"
            android:text="비밀번호를 8자 이상 입력하세요"
            android:textColor="#D50000"
            android:textSize="20dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"

        >

        <View
            android:layout_width="13dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font2"
            android:text="새로운 비밀번호를 다시 입력하세요."
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/empty_view8"
            android:layout_width="11dp"
            android:layout_height="46dp" />

        <View
            android:id="@+id/empty_view9"
            android:layout_width="20dp"
            android:layout_height="40dp" />

        <View
            android:id="@+id/empty_view10"
            android:layout_width="395dp"
            android:layout_height="67dp"
            android:layout_toRightOf="@id/empty_view8"
            android:background="@drawable/line3" />

        <EditText
            android:id="@+id/new_password2"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/empty_view9"
            android:background="@null"
            android:hint="비밀번호를 다시 입력하세요"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            android:textSize="30dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <View
            android:layout_width="38dp"
            android:layout_height="61dp" />

        <TextView
            android:id="@+id/error_text_1"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:fontFamily="@font/font2"
            android:gravity="center"
            android:textColor="#D50000"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/change_button"
        android:layout_width="325dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:background="@drawable/findpw_checkbutton" />

</LinearLayout>