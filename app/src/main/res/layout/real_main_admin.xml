<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context=".MainActivity2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/user_menu1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/user_menu" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="204dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/user_menu1"
            android:background="@drawable/login_logo" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_menu">

        <LinearLayout
            android:id="@+id/tmp_1"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <RelativeLayout
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:background="@drawable/mainmenu_button_1">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/lt_button"
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/mainmenu_button_1"
                    android:fontFamily="@font/font2"
                    android:text="방송하기"
                    android:textColor="@color/black"
                    android:backgroundTint="@null"
                    android:textSize="40dp"  />

                <Button
                    android:id="@+id/announce_speak_button"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#00ff0000"
                    android:fontFamily="@font/font2"
                    android:text="공지녹음"
                    android:textColor="@color/black"
                    android:textSize="40dp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/announce_write_button"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_alignBottom="@id/announce_speak_button"
                    android:layout_marginBottom="-90dp"
                    android:background="#00ff0000"
                    android:fontFamily="@font/font2"
                    android:text="공지쓰기"
                    android:textColor="@color/black"
                    android:textSize="40dp"
                    android:visibility="invisible" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:background="@drawable/mainmenu_button_2">

                <Button
                    android:id="@+id/ge_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:fontFamily="@font/font2"
                    android:text=" 게시판  "
                    android:textColor="@color/black"
                    android:textSize="40dp" />

                <Button
                    android:id="@+id/gong_button"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#00ff0000"
                    android:fontFamily="@font/font2"
                    android:text="공지사항"
                    android:textColor="@color/black"
                    android:textSize="40dp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/gun_button"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_alignBottom="@id/gong_button"
                    android:layout_marginBottom="-90dp"
                    android:background="#00ff0000"
                    android:fontFamily="@font/font2"
                    android:text="건의사항"
                    android:textColor="@color/black"
                    android:textSize="40dp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/tmp_1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Chat_button1"
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:background="@drawable/mainmenu_button_4"
                android:fontFamily="@font/font2"
                android:text="몽룡춘향"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="40dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/setting_button"
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:background="@drawable/mainmenu_button_3"
                android:gravity="center_horizontal"
                android:fontFamily="@font/font2"
                android:text="   설정   "
                android:textColor="@color/black"
                android:textSize="40dp" />
        </LinearLayout>

        <View
            android:id="@+id/tmp_2"
            android:layout_width="wrap_content"
            android:layout_height="378dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/singo_button"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_below="@id/tmp_2"
            android:layout_centerInParent="true"
            android:background="@drawable/oneonenine"
            android:textSize="25dp" />

        <View
            android:id="@+id/tmp_3"
            android:layout_width="match_parent"
            android:layout_height="447dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tmp_3"
            android:background="@drawable/main_menu_btm" />
    </RelativeLayout>
</LinearLayout>